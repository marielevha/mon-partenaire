generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth"]
}

enum ProjectCategory {
  AGRIBUSINESS
  TECH
  HEALTH
  EDUCATION
  INFRASTRUCTURE
  OTHER

  @@schema("public")
}

enum ProjectStatus {
  DRAFT
  PUBLISHED
  ARCHIVED

  @@schema("public")
}

enum LegalForm {
  SARL
  SA
  AUTOENTREPRENEUR
  OTHER

  @@schema("public")
}

enum EquityModel {
  NONE
  EQUITY
  REVENUE_SHARE

  @@schema("public")
}

enum ProjectVisibility {
  PUBLIC
  PRIVATE

  @@schema("public")
}

enum DocumentTemplateCategory {
  BUSINESS_STRATEGY
  LEGAL_CREATION
  FINANCE_INVESTMENT
  LOCAL_SECTORS

  @@schema("public")
}

enum DocumentTemplateLevel {
  BEGINNER
  ADVANCED

  @@schema("public")
}

enum DocumentTemplateFileType {
  PDF
  DOCX
  EDITABLE_ONLINE

  @@schema("public")
}

enum DocumentTemplateObjective {
  CREATE_BUSINESS
  RAISE_FUNDS
  FORMALIZE_PARTNERSHIP

  @@schema("public")
}

model Role {
  id          String           @id @default(uuid()) @db.Uuid
  code        String           @unique
  name        String
  description String?
  isSystem    Boolean          @default(false)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  rolePermissions RolePermission[]
  userRoles       UserRole[]

  @@schema("public")
}

model Permission {
  id          String           @id @default(uuid()) @db.Uuid
  code        String           @unique
  resource    String
  action      String
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  rolePermissions RolePermission[]

  @@index([resource, action])
  @@schema("public")
}

model RolePermission {
  id           String     @id @default(uuid()) @db.Uuid
  roleId       String     @db.Uuid
  permissionId String     @db.Uuid
  createdAt    DateTime   @default(now())

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@index([permissionId])
  @@schema("public")
}

model UserRole {
  id               String   @id @default(uuid()) @db.Uuid
  userId           String   @db.Uuid
  roleId           String   @db.Uuid
  assignedByUserId String?  @db.Uuid
  createdAt        DateTime @default(now())

  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@schema("public")
}

model Project {
  id               String          @id @default(uuid())
  ownerId          String
  title            String
  summary          String
  description      String
  category         ProjectCategory
  subCategory      String?
  city             String
  country          String          @default("CG")
  status           ProjectStatus   @default(DRAFT)
  legalForm        LegalForm?
  companyCreated   Boolean         @default(false)
  totalCapital     Int?
  ownerContribution Int?
  ownerEquityPercent Int?
  equityModel      EquityModel
  equityNote       String?
  visibility       ProjectVisibility @default(PUBLIC)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  needs  ProjectNeed[]
  images ProjectImage[]
  documents ProjectDocument[]

  @@schema("public")
}

model ProjectNeed {
  id         String   @id @default(uuid())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId  String
  type       String
  title      String
  description String?
  amount     Int?
  equityShare Int?
  skillTags  String[] @default([])
  isFilled   Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@schema("public")
}

model ProjectImage {
  id         String   @id @default(uuid())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  storagePath String  @unique
  alt        String?
  isCover    Boolean  @default(false)
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())

  @@index([projectId, sortOrder])
  @@schema("public")
}

model ProjectDocument {
  id           String   @id @default(uuid())
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  storagePath  String   @unique
  originalName String
  mimeType     String?
  sizeBytes    Int?
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())

  @@index([projectId, sortOrder])
  @@schema("public")
}

model DocumentTemplate {
  id                        String                    @id @default(uuid())
  ownerId                   String?
  slug                      String                    @unique
  title                     String
  summary                   String
  category                  DocumentTemplateCategory
  level                     DocumentTemplateLevel
  fileType                  DocumentTemplateFileType
  objective                 DocumentTemplateObjective
  sectorTags                String[]                  @default([])
  highlight                 String
  attachedDocumentPath      String?
  attachedDocumentName      String?
  attachedDocumentMimeType  String?
  attachedDocumentSizeBytes Int?
  isPublished               Boolean                   @default(true)
  isFeatured                Boolean                   @default(false)
  createdAt                 DateTime                  @default(now())
  updatedAt                 DateTime                  @updatedAt

  @@index([isPublished, isFeatured])
  @@index([category])
  @@index([ownerId])
  @@schema("public")
}
