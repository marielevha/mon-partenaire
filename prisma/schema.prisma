generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth"]
}

enum ProjectCategory {
  AGRIBUSINESS
  TECH
  HEALTH
  EDUCATION
  INFRASTRUCTURE
  OTHER

  @@schema("public")
}

enum ProjectStatus {
  DRAFT
  PUBLISHED
  ARCHIVED

  @@schema("public")
}

enum LegalForm {
  SARL
  SA
  AUTOENTREPRENEUR
  OTHER

  @@schema("public")
}

enum EquityModel {
  NONE
  EQUITY
  REVENUE_SHARE

  @@schema("public")
}

enum ProjectVisibility {
  PUBLIC
  PRIVATE

  @@schema("public")
}

model Project {
  id               String          @id @default(uuid())
  ownerId          String
  title            String
  summary          String
  description      String
  category         ProjectCategory
  subCategory      String?
  city             String
  country          String          @default("CG")
  status           ProjectStatus   @default(DRAFT)
  legalForm        LegalForm?
  companyCreated   Boolean         @default(false)
  totalCapital     Int?
  ownerContribution Int?
  equityModel      EquityModel
  equityNote       String?
  visibility       ProjectVisibility @default(PUBLIC)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  needs  ProjectNeed[]
  images ProjectImage[]

  @@schema("public")
}

model ProjectNeed {
  id         String   @id @default(uuid())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId  String
  type       String
  title      String
  description String?
  amount     Int?
  equityShare Int?
  skillTags  String[] @default([])
  isFilled   Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@schema("public")
}

model ProjectImage {
  id         String   @id @default(uuid())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  storagePath String  @unique
  alt        String?
  isCover    Boolean  @default(false)
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())

  @@index([projectId, sortOrder])
  @@schema("public")
}
